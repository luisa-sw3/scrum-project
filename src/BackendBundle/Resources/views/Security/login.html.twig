<!DOCTYPE html>
<html lang="en">
    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}Agile SCRUM{% endblock %}</title>

        <!-- Bootstrap Core CSS -->
        <link href="{{asset('bundles/backend/css/bootstrap.min.css')}}" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="{{asset('bundles/backend/css/sb-admin.css')}}" rel="stylesheet">

        <!-- Login Custom CSS -->
        <link href="{{asset('bundles/backend/css/login.css')}}" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="{{asset('bundles/backend/font-awesome/css/font-awesome.min.css')}}" rel="stylesheet" type="text/css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body style="background-color: #FFF;" class="page-body login-page login-form-fall">

        <div class="login-container">

            <div class="login-header login-caret">
                <div class="login-content">
                    <a href="{{path('frontend_homepage')}}" class="logo">
                        <img src="{{asset('bundles/backend/images/logo.png')}}"/>
                    </a>
                </div>
            </div>

            <div class="login-form">
                <div class="login-content">
                    <p>{{'backend.login.message'|trans}}</p>
                    {% if error %}
                        <div class="alert alert-danger alert-dismissable">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form action="{{path('backend_login_check')}}" role="form" method="post" id="form_login">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-at"></i></span>
                                <input autocomplete="off" type="text" placeholder="email" class="form-control" id="username" name="_username" value="{{ last_username }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input class="form-control" type="password" placeholder="password" id="password" name="_password">
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="checkbox">
                                        <label for="remember_me">
                                            <input type="checkbox" id="remember_me" name="_remember_me" checked />{{'backend.login.keep_logged_in'|trans}}
                                        </label>
                                    </div>
                                </div>
                            </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block btn-login" type="submit">
                                {{'backend.login.log_in'|trans}}
                            </button>
                        </div>
                    </form>
                    <div class="login-bottom-links">
                        <a class="link" href="{{path('frontend_create_account')}}">{{'backend.login.create_account'|trans}}</a>    
                        {#<br>
                        <a class="link" href="#">{{'backend.login.forgot_password'|trans}}</a>
                        <br>
                        <a href="#">ToS</a>  - <a href="#">Privacy Policy</a>#}
                    </div>
                </div>
            </div>
        </div>

        <!-- jQuery -->
        <script src="{{ asset('bundles/backend/js/jquery.js') }}"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('bundles/backend/js/bootstrap.min.js') }}"></script>


        <script type="text/javascript">
            $(document).ready(function () {
            {% block scripts %}
            {% endblock %}
                });
            {% block functions_javascript %}
            {% endblock %}
        </script>
    </body>

</html>





