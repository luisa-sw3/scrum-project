{% extends 'BackendBundle:Default:mainFancybox.html.twig' %}
{% block title %}{{'backend.item.move_copy_other_project'|trans}}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{'backend.item.move_copy_other_project'|trans}}
            </h1>
        </div>
    </div>
        
    {{ filters.showMessage('messageSuccess', 'success')}}
    {{ filters.showMessage('messageError', 'danger')}}
    
    <div class="row">
        {% set form_params = {'id':project.id, 'itemId':item.id} %}
        {{ form_start(form, {'action': path('backend_project_product_backlog_copy_move_to_project', form_params), 'method': 'POST'}) }}
            <div class="col-lg-6 col-md-6 col-xs-6">
                <div class="form-group container-radios">
                    {{ form_label(form.action)}}<em>*</em>
                    {{ form_widget(form.action) }}
                    {{ form_errors(form.action) }}
                </div>
                <div class="form-group container-radios">
                    {{ form_label(form.method)}}<em>*</em>
                    {{ form_widget(form.method) }}
                    {{ form_errors(form.method) }}
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-xs-6">
                <div class="form-group">
                    {{ form_label(form.user_project)}}
                    {{ form_widget(form.user_project, {'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.user_project) }}
                </div>
            </div>
            <div class="col-lg-12">
                {{ form_widget(form._token) }} 
                <button type="submit"class="btn btn-primary pull-right">{{ 'backend.global.send'|trans }}</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block scripts %}
    {% if closeFancy %}
        closeFancyOnTime(true, 1);
    {% endif %}
{% endblock %}