        <!-- End Fancybox JS -->

        <script src="{{ asset('bundles/backend/js/highcharts.js') }}"></script>
        
        <script type="text/javascript">
            var is_mobile_device = false;
            $(document).ready(function () {

                /* Libreria Safary */
                webshims.polyfill();

                /* Codigo para eventos de fancybox */
                $(".fancybox").fancybox();

                /* Codigo para eventos de popovers */
                $('.popover-menu').each(function(){
                    var object = $(this);
                    var title = object.attr('title');
                    var content = object.attr('content');
                    object.popover({title: title, content: content, html: true, placement: "auto", trigger: "hover"});
                });
                
                /* Validacion para saber si estamos en un dispositivo mobile o no */
                if ( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
                    is_mobile_device = true;
                }
                
                $(".navbar-header button.navbar-toggle").click(function() {
                    if ($(".navbar-ex1-collapse").attr('aria-expanded') == 'true') {
                        $(".side-nav span.nav-title").addClass('hidden');
                    } else {
                        $(".side-nav span.nav-title").removeClass('hidden');
                    }
                    $(".side-nav li a").css('width','225px');
                });
                
                $( window ).resize(function() {
                    var windowWidth = $( window ).width();
                    if (windowWidth <= 753) {
                        $(".side-nav span.nav-title").removeClass('hidden');
                        $(".side-nav li a").css('width','225px');
                    } else {
                        $(".side-nav span.nav-title").addClass('hidden');
                        $(".side-nav li a").css('width','60px');
                    }
                });

                {% block scripts %}
                {% endblock %}
                });
            {% block functions_javascript %}
            {% endblock %}
        </script>
        
        {% block other_scripts %}
        {% endblock %}
    </body>
</html>
